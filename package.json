{
  "name": "magentodev",
  "displayName": "MagentoDev",
  "description": "Make vscode a better IDE for Magento 2",
  "author": {
    "name": "Cyril Leblanc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CyrilLeblanc/vscode-magentodev.git"
  },
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "magentodev.overrideInTheme",
        "title": "MagentoDev: Override in theme"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "magentodev.overrideInTheme",
          "when": "!explorerResourceIsFolder"
        }
      ],
      "explorer/context": [
        {
          "command": "magentodev.overrideInTheme",
          "group": "z_magentodev@1",
          "when": "!explorerResourceIsFolder"
        }
      ]
    },
    "snippets": [
      {
        "language": "xml",
        "path": "./snippets/xml.json"
      },
      {
        "language": "php",
        "path": "./snippets/php.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "php-parser": "^3.1.5",
    "xml-js": "^1.6.11"
  }
}
